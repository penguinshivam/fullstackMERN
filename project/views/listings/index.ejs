<% layout('/layouts/boilerplate') %>
<body>
    <h3>allListings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a class="listing-link" href="/listings/<%=listing._id%>">
        <div class="card col" style="width: 20rem;">
            <img src="<%=listing.image%>" class="card-img-top" alt="listing image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %> </b>
                <br>&#8377;<%= listing.price.toLocaleString("en-IN")%>/Night
            </p>
            </div>
          </div>
        </a>
          <%} %>
    </div>
</body>